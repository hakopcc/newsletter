<div class="panel panel-default">
    <div class="panel-heading">{{ "Tailored Placement Settings"|trans }}</div>
    <div class="panel-body row">
        <div class="form-group col-sm-4">
            <label class="control-label">{{ "Map zoom"|trans }}</label>
            <div class="selectize">
                {{ zoomDropDown|raw }}
            </div>
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">{{ "Central Latitude"|trans }}</label>
            <input class="form-control" type="text" name="default_latitude" value="{{ default_latitude }}">
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">{{ "Central Longitude"|trans }}</label>
            <input class="form-control" type="text" name="default_longitude" value="{{ default_longitude }}">
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" class="btn btn-primary action-save" name="save_plugin[tailored_map_listing]" value="1" data-loading-text="{{ "Please, wait..."|trans }}">{{ "Save changes"|trans }}</button>
    </div>
</div>
