<div class="panel panel-default">

    <div class="panel-heading">
        {{ "Yelp Integration Settings"|trans }}
    </div>

    <div class="panel-body form-horizontal">

        <div class="form-group row">
            <div class="control-label col-sm-3">
                {{ "API Key"|trans }}
            </div>
            <div class="col-sm-8">
                <input class="form-control" onchange="changeKey()" name="yelp_appSecret" id="yelp_appSecret"
                       value="{{ yelpAppSecret }}">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-8 col-lg-offset-3">
                <div id="yelp_messageAlert"></div>
                <div class="control-label">
                    <button type="button" href="javascript:" onclick="isValidKey()" id="yelp_keyValidator"
                            class="btn btn-info">{{ "Validate Yelp Key"|trans }}</button>
                </div>
            </div>
        </div>

    </div>

    <div class="panel-footer">

        <button type="submit" name="save_plugin[yelp_integration]" value="1" class="btn btn-primary action-save disabled" id="yelp_saveButton"
                data-loading-text="{{ "Please, wait..."|trans }}">
            {{ "Save changes"|trans }}
        </button>

    </div>

</div>
