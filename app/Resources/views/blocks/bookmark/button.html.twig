{% spaceless %}
    {% set classLink = module == 'article' ? 'icon' : '' %}
    {% set classIcon = marked ? 'fa-bookmark' : 'fa-bookmark-o' %}
    <a href="javascript:void(0);" class="{{ classLink }}" data-tooltip="{{ 'Add this item to favorites'|trans }}" tooltip-position="bottom" data-id="{{ id }}" data-module="{{ module }}" data-modal="bookmark" rel="nofollow">
        <span class="icon icon-md"><i class="fa {{ classIcon }}"></i></span>
    </a>
{% endspaceless %}
