{%- set module = getModuleBanner() -%}
{%- set bannersInfo = renderImageBanner(module, content.banners|cast_to_array, bannerCategories) -%}
{%- if bannersInfo.banners -%}
    {% if content.bannerType != "large-mobile" -%}
        <div class="banner" type="{{ content.bannerType }}" is-wide="{{ content.isWide }}" data-bg="{{ content.backgroundColor }}" has-gap
             data-trans="{{ 'Leaderboard ad bar (728x90)'|trans({}, 'widgets') }}">
            {{ bannersInfo.banners|raw }}
        </div>
    {% else -%}
        <div class="banner" type="{{ content.bannerType }}" is-wide="{{ content.isWide }}" data-bg="{{ content.backgroundColor }}" data-count="{{ bannersInfo.counter }}" has-gap>
            <div class="container" data-trans="{{ '3 rectangle ad bar'|trans({}, 'widgets') }}">
                {{ bannersInfo.banners|raw }}
            </div>
        </div>
    {% endif -%}
{%- endif -%}
