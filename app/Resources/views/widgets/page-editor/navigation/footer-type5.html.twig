{% set newsletter = getSetting('arcamailer_customer_listid') -%}
{% if newsletter -%}    
    <div class="hero-default hero-newsletter-footer" data-type="2">
        <div class="container">
            <hr />
            <div class="row align-center">
                <div class="col-md-6">
                    <div class="heading h-1" data-trans="{{ 'Sign up for our newsletter'|trans({}, 'widgets') }}">
                        {{ content.datainfoSignupFor|trans({}, 'widgets') }}
                    </div>
                    <div class="paragraph p-1"
                     data-trans="{{ 'Sign up for our monthly newsletter. No spams, just product updates.'|trans({}, 'widgets') }}">
                        {{ content.datainfoNewsletterDesc|trans({}, 'widgets') }}
                    </div>
                </div>
                <div class="col-md-6">
                    <form id="formNewsletterFooter" class="form-newsletter">
                        <div class="alert-message" data-type="success" is-dismissible="false" is-visible="false"></div>
                        <div class="form-newsletter-wrapper">
                            <input type="text" class="input" placeholder="{{ 'Name'|trans }}" name="name" required>
                            <input type="email" class="input" placeholder="{{ 'E-mail'|trans }}" name="email" required>
                            <button class="button button-bg is-primary" data-size="" data-content=""
                                    data-loading="{{ 'Please, wait...'|trans }}">
                                {{ "Sign Up"|trans }}
                            </button>
                        </div>

                        {% if ( getSetting('userconsent_status') == 'on' ) %}
                            {#check box accept the information#}
                            <div class="consents-block">
                                <label for="termsService-footer" class="form-remember">
                                    <input type="checkbox" name="termsService" id="termsService-footer" required>
                                    {{ 'By signing up, I agree to the %start_terms% Terms of Services %end_terms% and %start_privacy% Privacy Policy %end_privacy%.'| trans({'%start_terms%' : '<a href="/'~getParameter('alias_terms_url_divisor')~'" class="link">', '%end_terms%' : '</a>', '%start_privacy%' : '<a href="/'~getParameter('alias_privacy_url_divisor')~'" class="link">', '%end_privacy%' : '</a>'}, 'account') | raw }}
                                </label>
                                <label for="newsletter-consent-footer" class="form-remember">
                                    <input type="checkbox" name="newsletter" id="newsletter-consent-footer" required>
                                    {{ 'I understand that the name and email I enter will be stored by the website, shared and securely stored with a 3rd party newsletter processor. I understand that I may be contacted by the Admin of the website at this email.'|trans({},'consent')}}
                                </label>
                            </div>
                        {% else %}
                            <div class="form-privacy">
                                {{ 'By signing up, you agree to our %start_terms% Terms of Services %end_terms% and %start_privacy% Privacy Policy %end_privacy%.'| trans({'%start_terms%' : '<a href="/'~getParameter('alias_terms_url_divisor')~'" class="link">', '%end_terms%' : '</a>', '%start_privacy%' : '<a href="/'~getParameter('alias_privacy_url_divisor')~'" class="link">', '%end_privacy%' : '</a>'}, 'account') | raw }}
                            </div>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{ addJSFile("assets/js/widgets/newsletter/newsletter.js") }}
{% endif %}

<footer class="footer" data-type="5" is-inverse="{{ content.backgroundColor == 'base' ? 'true' : 'false' }}">
    <div class="footer-content" data-trans="{{ 'Footer with Newsletter'|trans({}, 'widgets') }}">
        <div class="container">
            <div class="footer-logo">
                <a href="{{ path('web_homepage') }}" class="logo-link" target="_parent" title="{{ title }}">
                    <img src="{{ utility_getLogoImage()|imagine_filter('logo') }}?{{ 'now' | date('U') }}" class="img-responsive" alt="{{ title }}">
                </a>
            </div>
            {{ socialMedia() }}

            <div class="footer-actions">
                {{ navigationFooter(content) }}
            </div>
            {{ copyright(content, null, true) }}
        </div>

        <div class="arrow-up">
            <button id="scrollToTopBtn"><i class="fa fa-angle-up"></i></button>
        </div>
    </div>
</footer>
